view,
button,
input,
textarea,
select,
text,
navigator {
	box-sizing: border-box;
}
view {
	display: block;
}
image {
	vertical-align: bottom;
}
button,
input,
textarea,
select,
.radio {
	-webkit-appearance: none;
	appearance: none;
	border: none;
	resize: none;
	outline: none;
}
a {
	color: #353535;
	text-decoration: none;
}

page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
} 

#header {
  width: 100%;
  height: 116rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.header-headhumb {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}

.header-logo {
  width: 94rpx;
  height: 46rpx;
}

.header-search {
  width: 44rpx;
  height: 44rpx;
}

.content {
  flex: 1;
  width: 100%;
}

#footer {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

#footer .footer-add {
  width: 84rpx;
  height: 84rpx;
  margin-top: -30rpx;
  position: relative;
  z-index: 10;
}

#footer .footer-home {
  width: 36rpx;
  height: 36rpx;
}

#footer .footer-menu {
  width: 28rpx;
  height: 26rpx;
}
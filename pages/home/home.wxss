/* pages/home/home.wxss */
.home-nav {
  width: 100%;
  height: 84rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.home-nav .home-nav-column {
  display: inline-block;
  color: #c2c2c2;
  font-size: 32rpx;
}

.content {
  background-color: #ececec;
}

.content swiper {
  width: 100%;
  height: 100%;
}

.content swiper scroll-view {
  padding-top: 30rpx;
}

.home-articleBox {
  width: 92%;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow:0px 0px 12px #333333;
  margin: auto;
  padding-bottom: 30rpx;
}

.home-articleBox .home-articleBox-img {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.home-articleBox-title {
  font-size: 32rpx;
  padding: 0 30rpx;
  margin: 30rpx 0 24rpx;
}

.home-articleBox-content {
  color: #666;
  padding: 0 30rpx;
  line-height: 36rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}